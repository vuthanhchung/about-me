{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "plugin:prettier/recommended"
    ],
    "env": {
        "browser": true,
        "jest": true
    },
    "rules": {
        "prettier/prettier": "error",
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "prefer-promise-reject-errors": [
            "off"
        ],
        "react/jsx-filename-extension": [
            "off"
        ],
        "no-return-assign": [
            "off"
        ]
    }
}